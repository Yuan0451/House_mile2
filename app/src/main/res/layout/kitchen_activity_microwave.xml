<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_microwave"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamwork.final_project.kitchenMicrowave">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="cooking time (seconds)"
        android:inputType="time"
        android:layout_alignParentStart="true"
        android:id="@+id/time_entry" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/time_reset"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/time_entry"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/micro_timer"
        android:layout_below="@+id/time_entry"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/time_start"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/time_reset"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop"
        android:layout_below="@+id/time_start"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:id="@+id/time_set"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/stop"
        android:layout_alignParentStart="true" />


</RelativeLayout>
